@model MvcCv.Models.Entity.TblSosyalMedya
@{
    ViewBag.Title = "SosyalmedyaDüzenle";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<br />
<br />
<h2  class="text-center my-4" style="background-color: #f3e5f5; color: #6a1b9a; ">Sosyal Medya Düzenleme Sayfası</h2>
<form method="post">

    @Html.Label("Ad")
    @Html.TextBoxFor(x => x.Ad, new { @class = "form-control" })
    <br />
    @Html.Label("Link")
    @Html.TextBoxFor(x => x.Link, new { @class = "form-control" })
    <br />
    @Html.Label("İkon")
    @Html.TextBoxFor(x => x.ikon, new { @class = "form-control" })
    <br />
    @Html.Label("Durum")
    @Html.TextBoxFor(x => x.Durum, new { @class = "form-control" })
    <br />

    <br />
    <button class="btn btn-success">GÜNCELLE</button>
</form>