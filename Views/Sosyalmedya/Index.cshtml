@using MvcCv.Models.Entity
@model List<TblSosyalMedya>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2  class="text-center my-4" style="background-color: #f3e5f5; color: #6a1b9a; ">Sosyal Medya Listesi</h2>


<!DOCTYPE html>
<html>
<head>
</head>
<body class="hold-transition sidebar-mini">
    <div class="wrapper">
        <section class="content">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-md-12">
                        <div class="card">
                            <div class="card-body">
                                <button class="btn btn-primary" data-toggle="modal" data-target="#Modal1">Yeni Sosyal Medya Hesabı Ekle</button>
                                <br />
                                <br />

                                <table class="table table-bordered">
                                    <thead>
                                        <tr>
                                            <th style="width: 10px">ID</th>
                                            <th>Ad</th>
                                            <th>Link</th>
                                            <th style="width: 40px">İkon</th>
                                            <th style="width: 40px">Durum</th>
                                            <th>Düzenle</th>
                                            <th>Sil</th>
                                            <th>Pasif-Aktif</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var x in Model)
                                        {
                                           
                                            <tr>
                                                <td>@x.ID</td>
                                                <td>@x.Ad</td>
                                                <td>@x.Link</td>
                                                <td>@x.ikon</td>
                                                <td>@x.Durum</td>
                                                <td>
                                                    <a class="btn btn-info btn-sm" href="/Sosyalmedya/SosyalmedyaDüzenle/@x.ID">
                                                        <i class="fas fa-pencil-alt">
                                                        </i>
                                                        Düzenle
                                                    </a>
                                                </td>
                                                <td>
                                                    <a class="btn btn-danger btn-sm" href="/Sosyalmedya/SosyalmedyaSil/@x.ID">
                                                        <i class="fas fa-trash">
                                                        </i>
                                                        Sil
                                                    </a>
                                                </td>
                                                <td>
                                                    <a class="btn btn-warning btn-sm" href="/Sosyalmedya/SosyalmedyaDurum/@x.ID">
                                                        <i class="fas fa-trash">
                                                        </i>
                                                        Pasif-Aktif
                                                    </a>
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
        <div class="modal" id="Modal1">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <h2  class="text-center my-4" style="background-color: #f3e5f5; color: #6a1b9a; " >Sosyal Medya Hesabı Ekleme Penceresi</h2>
                    </div>
                    <form method="post" action="/Sosyalmedya/SosyalmedyaEkle">
                        <div class="modal-body">
                            <label> Sosyal Medya İsmi</label>
                            <input type="text" name="Ad" class="form-control" />
                            <br />
                            <label> Sosyal Medya Linki</label>
                            <input type="text" name="Link" class="form-control" />
                            <br />
                            <label> Sosyal Medya İkonu</label>
                            <input type="text" name="ikon" class="form-control" />
                            <br />
                            <button class="btn btn-info">KAYDET</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>

    </div>
</body>
</html>



